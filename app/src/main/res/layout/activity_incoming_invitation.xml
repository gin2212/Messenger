<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_meeting_invitation"
    tools:context=".IncomingInvitationActivity">

    <ImageView
        android:id="@+id/imageMeetingType"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textInComingMeetingInvitation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="Incoming Meeting Invitation"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/imageMeetingType"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/textFirstChar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/background_meeting_invitation_user_icon"
            android:fontFamily="bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textUsername"
            android:layout_marginTop="10dp"
            android:fontFamily="bold"
            android:layout_gravity="center"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textEmail"
            android:layout_marginTop="6dp"
            android:fontFamily="regular"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textSize="11sp"/>
    </LinearLayout>

    <ImageView
    android:id="@+id/imageAcceptInvitation"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginStart="60dp"
    android:layout_marginBottom="50dp"
    android:background="@drawable/background_accept_invition"
    android:contentDescription="@string/app_name"
    android:padding="8dp"
    android:src="@drawable/ic_accept"
    app:tint="@color/white"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/imageRejectInvitation"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/background_reject_invition"
        android:contentDescription="@string/app_name"
        android:padding="8dp"
        android:src="@drawable/ic_reject"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>